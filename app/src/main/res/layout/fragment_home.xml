<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.porgmun.martinajireckova.porgmun.activity.HomeFragment">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/container_body"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark">

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="200dp"
                            android:src="@drawable/logo2"
                            android:baselineAlignBottom="false"
                            android:id="@+id/logo"
                            android:layout_gravity="top|center_horizontal"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/home_logo"
                            android:textColor="#ffffff"
                            android:textSize="36sp"
                            android:typeface="normal"
                            android:textStyle="bold"
                            android:id="@+id/text"
                            android:layout_gravity="top|center_horizontal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="normal"
                android:text="6th - 9th April 2017"
                android:textColor="#ffffff"
                android:textSize="22sp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:text="Closest event:"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff"
                android:padding="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6th April"
                    android:textSize="16sp"
                    android:id="@+id/date"
                    android:layout_marginBottom="5dp"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="11:00-13:00 Registration"

                    android:textSize="16sp"
                    android:id="@+id/event"
                    android:layout_weight="0.2"/>


               <!-- <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton_directions"
                    android:background="#ffffff"
                    android:layout_gravity="left"
                    android:src="@drawable/ic_directions_black_24dp"
                    android:padding="10dp"

                    />-->
                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton_alert"
                    android:layout_gravity="center_vertical|right"
                    android:src="@drawable/ic_add_alert_black_24dp"
                    android:background="#ffffff"

                    android:layout_weight="0.8"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>
